<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Características de cámara -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:name=".GeneticsApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Genetics"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".EditAnimalActivity"
            android:exported="false" /> <!-- Actividad principal (MainActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad de Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" /> <!-- Dashboard principal -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" /> <!-- === ANIMALES === -->
        <!-- Lista de animales -->
        <activity
            android:name=".AnimalsActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" /> <!-- Detalles del animal -->
        <activity
            android:name=".AnimalDetailActivity"
            android:exported="false"
            android:parentActivityName=".AnimalsActivity"
            android:screenOrientation="portrait" /> <!-- Agregar nuevo animal -->
        <activity
            android:name=".Add.AddAnimalActivity"
            android:exported="false"
            android:parentActivityName=".AnimalsActivity"
            android:screenOrientation="portrait" /> <!-- === INCIDENCIAS === -->
        <!-- Lista de incidencias -->
        <activity
            android:name=".IncidentsActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" /> <!-- Agregar nueva incidencia -->
        <activity
            android:name=".Add.AddIncidentActivity"
            android:exported="false"
            android:parentActivityName=".IncidentsActivity"
            android:screenOrientation="portrait" /> <!-- === TRATAMIENTOS === -->
        <!-- Lista de tratamientos -->
        <activity
            android:name=".TreatmentsActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" /> <!-- Agregar nuevo tratamiento -->
        <activity
            android:name=".Add.AddTreatmentActivity"
            android:exported="false"
            android:parentActivityName=".TreatmentsActivity"
            android:screenOrientation="portrait" /> <!-- === CALENDARIO === -->
        <!-- Vista del calendario -->
        <activity
            android:name=".CalendarActivity"
            android:exported="false"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" /> <!-- Agregar nuevo evento -->
        <activity
            android:name=".Add.AddEventActivity"
            android:exported="false"
            android:parentActivityName=".CalendarActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>